<resources>

    <style name="WeekDayTextStyle">
        <item name="android:textSize">@dimen/size_text_week_days</item>
        <item name="android:textColor">@color/selector_day_of_week</item>
        <item name="android:layout_marginLeft">@dimen/padding_week_days_grid</item>
        <item name="android:layout_marginRight">@dimen/padding_week_days_grid</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LogTimeTextStyle" parent="@style/WeekDayTextStyle">
        <item name="android:textColor">@color/text_common_blue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ScheduleEditedTimeTextStyle" parent="@style/LogTimeTextStyle">
        <item name="android:gravity">left</item>
    </style>

    <style name="Small_Button_Drawer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/bg_add_new</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageButton_SubItem_Drawer">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextView_Drawer_SubItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawer_SubItem_Layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Filters_Define_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_common_black</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Filter_Define_CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="background">@drawable/bg_actionbar</item>
    </style>

</resources>
