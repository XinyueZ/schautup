<resources>

    <style name="WeekDayTextStyle">
        <item name="android:textSize">@dimen/size_text_week_days</item>
        <item name="android:textColor">@color/selector_day_of_week</item>
        <item name="android:layout_marginLeft">@dimen/padding_week_days_grid</item>
        <item name="android:layout_marginRight">@dimen/padding_week_days_grid</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LogTimeTextStyle" parent="@style/WeekDayTextStyle">
        <item name="android:textColor">@color/text_common_blue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ScheduleEditedTimeTextStyle" parent="@style/LogTimeTextStyle">
        <item name="android:gravity">left</item>
    </style>

    <style name="Small_Button_Drawer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/selector_bg2_btn</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="ImageButton_Subitem_Drawer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_bg1_btn</item>
    </style>
</resources>
