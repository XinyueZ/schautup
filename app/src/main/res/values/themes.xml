<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:textColorPrimary">#ebebeb</item>
        <item name="android:textColorSecondary">#ebebeb</item>
        <item name="android:dropDownListViewStyle">@style/OverflowDropDown</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:colorAccent">@color/primary_dark_color</item>
        <item name="android:windowBackground">@color/grey_500</item>
        <item name="android:actionModeBackground">@color/primary_dark_color</item>
        <!-- Support library compatibility -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="dropDownListViewStyle">@style/OverflowDropDown</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/primary_dark_color</item>
        <item name="actionModeBackground">@color/primary_dark_color</item>
    </style>




    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/common_white</item>
        <item name="android:textColorPrimary">@color/blue_grey_50</item>
        <item name="android:textColorSecondary">@color/blue_grey_50</item>
        <item name="android:colorAccent">@color/teal_500</item>
        <item name="colorAccent">@color/teal_500</item>
    </style>

    <!--Actionbar overflow menu divider-->
    <style name="OverflowDropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/primary_dark_color</item>
    </style>


    <style name="ActivityDialog" parent="@style/Theme.AppCompat.Dialog" />

</resources>