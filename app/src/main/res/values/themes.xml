<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AbStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@style/OverflowDropDown</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AbStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="dropDownListViewStyle">@style/OverflowDropDown</item>
    </style>

    <style name="NoTitleTextOverlayTheme" parent="@AppTheme">
        <item name="android:actionBarStyle">@style/AbStyleNoTitleText</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AbStyleNoTitleText</item>
    </style>


    <style name="NoOverlayTheme" parent="@AppTheme">
        <item name="android:actionBarStyle">@style/AbStyleHomeUp</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:textColorPrimary">@color/text_common_white</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AbStyleHomeUp</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="OverlayTheme" parent="@AppTheme">
        <item name="android:actionBarStyle">@style/AbStyleHomeUp</item>
        <item name="android:textColorPrimary">@color/text_common_white</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AbStyleHomeUp</item>
    </style>

    <!--Support ActionBar-->

    <style name="AbStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/bg_actionbar</item>
        <item name="android:icon">@null</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <!-- Support library compatibility -->
        <item name="icon">@null</item>
        <item name="background">@color/bg_actionbar</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>

    </style>

    <style name="AbStyleNoTitleText" parent="@style/AbStyle">
        <item name="android:displayOptions">showHome</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">showHome</item>
    </style>

    <style name="AbStyleHomeUp" parent="@style/AbStyle">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>


    <!--Actionbar overflow menu divider-->
    <style name="OverflowDropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/bg_overflow</item>
    </style>



    <!--Actionbar title text-->
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_common_white</item>
    </style>

