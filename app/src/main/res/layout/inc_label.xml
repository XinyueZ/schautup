<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="4.5"
    style="@style/Drawer_SubItem_Layout">


    <TextView
        android:id="@+id/label_name_tv"
        android:layout_weight="3"
        style="@style/TextView_Drawer_SubItem"
        android:text="Label" />


    <com.schautup.views.AnimImageButton
        android:id="@+id/label_remove_ibtn"
        android:layout_weight="0.5"
        android:src="@drawable/ic_remove_btn"
        style="@style/ImageButton_SubItem_Drawer" />


    <com.schautup.views.AnimImageButton
        android:id="@+id/label_edit_ibtn"
        android:layout_weight="0.5"
        android:src="@drawable/ic_edited"
        style="@style/ImageButton_SubItem_Drawer" />


    <com.schautup.views.AnimImageButton
        android:id="@+id/label_do_ibtn"
        android:layout_weight="0.5"
        android:src="@drawable/ic_add_schedule_btn"
        style="@style/ImageButton_SubItem_Drawer" />

</LinearLayout>