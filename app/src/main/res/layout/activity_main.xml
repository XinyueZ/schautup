<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.schautup.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/content_srl"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="3dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:id="@id/error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/inc_sticky" />

    </FrameLayout>

    <com.schautup.views.OneDirectionScrollView
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:scrollbars="none"
        android:background="@drawable/bg_drawer"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/drawer_menu_ll"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/drawer_header_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Home page.-->

            <LinearLayout
                android:id="@+id/drawer_item_home_page_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_drawer_item"
                android:orientation="horizontal"
                android:background="@drawable/selector_bg1_btn"
                android:weightSum="2.5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_home_page_btn"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/drawer_item_home_page"
                    style="@style/Drawer_Item_Text"
                    android:layout_weight="1.5" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lv_divider" />

            <!--Log.-->

            <LinearLayout
                android:id="@+id/drawer_item_log_history_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_drawer_item"
                android:orientation="horizontal"
                android:background="@drawable/selector_bg1_btn"
                android:weightSum="2.5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_log_btn"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/drawer_item_log_history"
                    style="@style/Drawer_Item_Text"
                    android:layout_weight="1.5" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lv_divider" />

            <!--Labels define.-->

            <LinearLayout
                android:id="@+id/labels_list_ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/drawer_item_labels_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_drawer_item"
                    android:orientation="horizontal"
                    android:background="@drawable/selector_bg1_btn"
                    android:weightSum="2.5">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_label_btn"
                        android:layout_weight="0.5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/drawer_item_labels"
                        style="@style/Drawer_Item_Text"
                        android:layout_weight="1.5" />

                    <Button
                        android:id="@+id/drawer_item_add_label"
                        android:text="@string/btn_add"
                        style="@style/Small_Button_Drawer" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lv_divider" />

            <!--Filter define.--><LinearLayout
            android:id="@+id/filters_list_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/drawer_item_filters_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_drawer_item"
                android:orientation="horizontal"
                android:background="@drawable/selector_bg1_btn"
                android:weightSum="2.5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_filter_btn"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/drawer_item_filter"
                    style="@style/Drawer_Item_Text"
                    android:layout_weight="1.5" />

                <com.schautup.views.AnimImageTextView
                    android:id="@+id/drawer_item_add_filter"
                    android:text="@string/btn_add"
                    style="@style/Small_Button_Drawer" />
            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lv_divider" />

            <!--Settings.-->

            <LinearLayout
                android:id="@+id/drawer_item_settings_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_drawer_item"
                android:orientation="horizontal"
                android:background="@drawable/selector_bg1_btn"
                android:weightSum="2.5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_settings_btn"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/drawer_item_settings"
                    style="@style/Drawer_Item_Text"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/extapp_title"
                style="@style/Drawer_Item_Text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/lv_divider" />
            <LinearLayout
                android:id="@+id/drawer_app_list_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_drawer_item"
                android:orientation="vertical" />
        </LinearLayout>
    </com.schautup.views.OneDirectionScrollView>
</android.support.v4.widget.DrawerLayout>
