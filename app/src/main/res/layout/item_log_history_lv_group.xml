<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:longClickable="true"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:background="@drawable/selector_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@id/delete_cb"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="@dimen/size_list_grid_item_img"
            android:layout_height="@dimen/size_list_grid_item_img"
            android:contentDescription="@string/application_name"
            android:layout_gravity="left|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_launcher" />


        <TextView
            android:id="@+id/status_tv"
            android:text="@string/application_name"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_common_black"
            android:paddingLeft="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_bolt"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/log_at_tv"
                style="@style/LogTimeTextStyle"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:text="sadf"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/open_comment_btn"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/lbl_more"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_common_white"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/selector_bg2_btn" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>