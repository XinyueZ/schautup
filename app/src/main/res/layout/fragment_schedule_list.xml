<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ScheduleListFragment">

    <ListView
        android:id="@+id/schedule_lv"
        android:cacheColorHint="@android:color/transparent"
        android:layout_width="match_parent"
        android:divider="@drawable/lv_divider"
        android:dividerHeight="@dimen/height_divider"
        android:layout_height="wrap_content" />


    <include layout="@layout/inc_empty" />

    <fragment
        android:name="com.schautup.fragments.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
    <include layout="@layout/inc_add_item" />
</FrameLayout>