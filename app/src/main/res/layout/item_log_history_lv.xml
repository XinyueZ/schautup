<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="3"
    android:longClickable="true"
    android:background="@drawable/selector_item_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item">

    <CheckBox
        android:id="@id/delete_cb"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:contentDescription="@string/app_name"
        android:layout_gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_launcher" />


    <TextView
        android:id="@+id/status_tv"
        android:text="@string/app_name"
        android:gravity="center|left"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="20sp"
        android:textColor="@color/text_common_black"
        android:paddingLeft="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="2"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/ic_bolt" android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/log_at_tv"
            style="@style/LogTimeTextStyle"
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>